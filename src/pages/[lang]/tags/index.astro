---
import { createPageDataByPost, generateBasicPaths, slugify } from "utils"
import { getCollection } from "astro:content"
import BaseLayout from "layouts/base.layout.astro"
import BackSection from "components/back.section.astro"
import Section from "components/section.astro"
import type { PageData } from "types"

type SupportedLanguage = "en" | "pt" | "de"
export async function getStaticPaths() {
  const languages: SupportedLanguage[] = ["en", "pt", "de"]
  return languages.map((lang) => {
    return {
      params: { lang },
      props: { lang },
    }
  })
}

const { lang } = Astro.params
const posts = await getCollection("blog", ({ id }) => {
  return id.startsWith(`${lang}/`)
})
const pages = posts.map(createPageDataByPost)

interface TagCount {
  [key: string]: PageData[]
}
const groupTags = pages.reduce<TagCount>((acc, page) => {
  if (!page.frontmatter!.tags) return acc

  const tags = page.frontmatter!.tags
  for (const tag of tags) {
    const group = acc[tag.label] || []
    group.push(page)
    acc[tag.label] = group
  }

  return acc
}, {})

const paths = generateBasicPaths("tags")
---

<BaseLayout title={"all Tags"} paths={paths}>
  <BackSection lang={lang} />
  <Section title={"all tags"}>
    <div class="tags-container">
      <div class="tag-list">
        {
          Object.keys(groupTags).map((tag) => (
            <div class="tag-item">
              <h2>
                <a href={`/${lang}/tags/${slugify(tag)}`} class="tag-link">
                  <span class="tag-name">{tag}</span>
                  <sup class="tag-count">{groupTags[tag].length}</sup>
                </a>
              </h2>
              <ul>
                {groupTags[tag].map((page) => (
                  <li>
                    <a href={`/${lang}/${page.slug}`} class="tag-post-link">
                      {page.frontmatter!.title}
                    </a>
                  </li>
                ))}
              </ul>
              <hr />
            </div>
          ))
        }
      </div>
    </div>
  </Section>
</BaseLayout>

<style>
  .tag-list {
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 10px;
  }

  .tag-item ul {
    list-style-type: square;
    padding-left: 20px;
  }
</style>
